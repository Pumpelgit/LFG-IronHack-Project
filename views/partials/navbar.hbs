<img src="/logo/logo.png" alt="LFG" height=72 class="mt-3 ml-5 pt-0">
<div class="user-menu border border-dark rounded container">
    <img src="{{user.avatar}}" alt="user avatar" class="w-100 rounded-circle my-3">
    <div class="row p-1">
        <p>@{{user.username}}</p>
    </div>

    <div class="row p-1">
        <a href="/profile" class="btn btn-success btn-sm ">Profile</a>
        <a href="/logout" class="btn btn-outline-danger btn-sm ml-1">Log Out</a>
    </div>

    <div class="row p-1 mt-2">
        <h5>Matches</h5>
        <div id="user-matches" class="px-1">
            {{#each user.matchedUsers as |matchedUser|}}
            <button id="button-{{matchedUser._id}}" type="button" class="btn btn-dark btn-sm mb-2 text-truncate"
                style="max-width: 150px;" data-toggle="modal"
                data-target="#matchedUserModal-{{matchedUser._id}}">@{{matchedUser.username}}</button>
            <div>
                <div class="modal fade" id="matchedUserModal-{{matchedUser.id}}" tabindex="-1"
                    aria-labelledby="matchedUserModal-{{matchedUser.id}}" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content user-card">
                            <div class="modal-header border-0">
                                <h5 class="modal-title" id="matchedUserModal-{{matchedUser.id}}">
                                    @{{matchedUser.username}}</h5>
                                <img src="{{matchedUser.avatar}}" alt="user avatar" width=50 class="rounded-circle">
                            </div>
                            <div class="modal-body inner-card-description border border-dark m-2 rounded">
                                <div class="row ">
                                    <h6 class="w-100">Game Tags</h6>
                                    {{#each matchedUser.gameTags as |tag|}}
                                    {{#unless @first}}
                                    <div class="col-md-auto w-50">
                                        <p class="font-weight-bold mt-1 mb-0 ">{{@key}}</p>
                                        <p class="font-weight-normal border-bottom border-dark">{{tag}}</p>                                                
                                    </div>
                                    {{/unless}}
                                    {{/each}}
                                </div>
                                <div class="row border-top boder-white pt-2 ">
                                    <h6 class="w-100">Description</h6>
                                    <p class="px-2">{{matchedUser.description}}</p>
                                </div>
                                <div class="row border-top boder-white pt-2 ">
                                    <h6 class="w-100">Plays</h6>
                                    {{#each matchedUser.games as |game|}}
                                    <p class="px-2">{{game.name}}</p>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</div>