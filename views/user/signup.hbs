<form action="/signup" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input name="username" type="text" class="form-control" id="username" placeholder="Username" value="">
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" id="password" placeholder="Password" value="">
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" class="form-control" id="name" placeholder="Username" value="">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input name="email" type="text" class="form-control" id="email" placeholder="Email" value="">
    </div>


    <div class="d-flex mb-3">
        <button type="submit" class="btn btn-primary mr-3">Login</button>
        <a href="/auth/google" class="btn btn-secondary mr-3"><i class="fa fa-google"></i> Login with Google</a>
    </div>

    <p>Don't have an account? <a href="/signup">Sign up</a></p>
</form>